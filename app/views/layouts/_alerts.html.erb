<% if notice.present? %>
<div class="notice-aux fixed">
  <p
    class="mt-2 ml-2 py-2 px-3 bg-blue-50 mb-5 text-blue-500 font-medium rounded-lg inline-block"
    id="notice"
  >
    <%= notice %>
  </p>
</div>
<% end %> <% if alert.present? %>
<div class="notice-aux fixed">
  <p
    class="mt-2 ml-2 py-2 px-3 bg-orange-50 mb-5 text-orange-500 font-medium rounded-lg inline-block"
    id="notice"
  >
    <%= alert %>
  </p>
</div>
<% end %>

<script>
  function hideNotices() {
    const notices = document.querySelectorAll(".notice, .alert, .notice-aux");
    notices.forEach(function (notice) {
      setTimeout(function () {
        notice.style.display = "none";
      }, 2000); // Hide the element after 3000 milliseconds (3 seconds)
    });
  }

  document.addEventListener("turbo:load", function () {
    hideNotices(); // Call the function to hide alerts on load
  });

  // We also call the function when the page initially loads
  document.addEventListener("DOMContentLoaded", function () {
    hideNotices();
  });
</script>
