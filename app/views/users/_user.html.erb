<div id="<%= dom_id(user) %>" class="col-span-1 p-2 bg-white-trans p-6 rounded-lg shadow-md hover:shadow-lg transition-all duration-300 mb-4">
    <h3 class="text-xl font-semibold text-gray-800 mb-3 ">
        <i class="fa fa-info-circle"></i>
        <%= user.username %>
    </h3>

    <p class="text-gray-600 mb-3">
        <strong class="font-medium text-gray-800">Email:</strong>
        <%= user.email %>
    </p>

    <p class="text-gray-600 mb-3">
        <strong class="font-medium text-gray-800">Is Admin:</strong>
        <%= user.isAdmin %>
    </p>

    <div class="mt-4">
        <%= link_to "Show this user", user, class: "inline-block bg-blue-500 text-white py-2 px-4 rounded-lg text-sm hover:bg-blue-600 transition-colors duration-200" %>
    </div>
</div>